<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <script>
      function deleteFromCart(id) {
        fetch("/delete/" + id, {
          method: "DELETE",
        })
          .then((res) => res.text())
          .then((data) => {
            console.log(data);
            window.location.reload();
          });
      }
    </script>
    <div class="grid grid-cols-2 grid-rows-2 w-3/4 h-96 gap-8">
      <% arr.forEach(element => { %>
      <div class="w-full h-[30vh] bg-gray-200 flex flex-col gap-4 items-center">
        <h1 class="text-xl font-bold"><%=element.product%></h1>
        <p class="text-base font-thin"><%=element.desc%></p>
        <p class="text-base font-bold"><%=element.price%></p>
        <button
          onclick="deleteFromCart('<%=element.id%>')"
          class="w-fit-py-2 px-4 bg-red-500 rounded-md shadow-3xl"
        >
          Delete
        </button>
      </div>
      <% }) %>
    </div>
  </body>
</html>
